<div class="container">
	<section class="row">
		<div class="span3 offset1">
			<span>
				<%= player.name %>
			</span>
		</div>
		<div class="span2">
			<span>
				<%= player.position %>
			</span>
		</div>
		<% if player.team.nil? %>
		<% else %>
			<div class="span3">
				<span>
					<%= player.team.name %>
				</span>
			</div>
			<div class="span1">
				<span>
					<%= player.ownership.order.round %>
				</span>
			</div>
			<div class="span1">
				<span>
					<%= player.ownership.order.pick %>
				</span>
			</div>
		<% end %>
	</section>
</div>